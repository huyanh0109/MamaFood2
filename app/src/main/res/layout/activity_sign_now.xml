<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignNow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        app:title="Đăng kí"
        app:titleTextColor="@color/white"
        app:titleMarginStart="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên"
        android:id="@+id/tvnames"

        android:layout_below="@+id/toolbar"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>
    <EditText
        android:id="@+id/edtnames"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvnames"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shapelogin"
        android:ems="10"
        android:inputType="textPersonName" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:id="@+id/Nnames"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ"
        android:id="@+id/tvadrrs"
        android:layout_below="@+id/edtnames"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>
    <EditText
        android:id="@+id/edtadrrs"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvadrrs"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shapelogin"
        android:ems="10"
        android:inputType="textPersonName" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:id="@+id/Nadrrs"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"
        android:id="@+id/tvnumbers"
        android:layout_below="@+id/toolbar"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>
    <EditText
        android:id="@+id/edtnumbers"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvnames"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shapelogin"
        android:ems="10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:id="@+id/Nnumbers"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"/>
        android:inputType="textPersonName" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gmail"
        android:id="@+id/tvgmails"
        android:layout_below="@+id/toolbar"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>
    <EditText
        android:id="@+id/edtgmails"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvnames"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shapelogin"
        android:ems="10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:id="@+id/Ngmails"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"/>
        android:inputType="textPersonName" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên đăng nhập"
        android:id="@+id/tvtdns"
        android:layout_below="@+id/toolbar"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>
    <EditText
        android:id="@+id/edttdns"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvnames"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shapelogin"
        android:ems="10"
        android:inputType="textPersonName" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:id="@+id/Ntdns"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:id="@+id/tvpasss"
        android:layout_below="@+id/toolbar"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>
    <EditText
        android:inputType="textPassword"
        android:id="@+id/edtpasss"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvnames"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shapelogin"
        android:ems="10" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:id="@+id/Npasss"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập lại mật khẩu"
            android:id="@+id/tvrepasss"
            android:layout_below="@+id/toolbar"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/edtrepasss"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvnames"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shapelogin"
            android:ems="10" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:id="@+id/Nrepasss"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btnbackp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="30dp"
                android:onClick="backh"
                android:drawableStart="@drawable/baseline_keyboard_return_24"
                android:layout_alignParentBottom="true"
                android:background="@color/minorange"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:text=""
                android:textAlignment="center"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnsignnow"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Đăng kí"
                android:drawableEnd="@drawable/ic_baseline_person_add_24"
                android:background="@drawable/shapebtn"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/btnbackp"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>