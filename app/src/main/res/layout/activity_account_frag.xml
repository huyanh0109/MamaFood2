<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.AccountFrag">
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        app:title="Thông tin"
        app:titleTextColor="@color/white"
        app:titleMarginStart="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"/>
    <ImageView
        android:id="@+id/imgcus"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="6dp"
        android:src="@drawable/ic_face"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/tvname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_margin="15dp"
        android:background="@drawable/gray_boder"
        android:layout_below="@+id/imgcus"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/tvgmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gmail"
        android:textSize="20dp"
        android:padding="5dp"
        android:background="@drawable/gray_boder"
        android:layout_margin="15dp"
        android:layout_below="@id/tvname"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/tvsdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SĐT"
        android:textSize="20dp"
        android:padding="5dp"
        android:background="@drawable/gray_boder"
        android:layout_margin="15dp"
        android:layout_below="@id/tvgmail"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/tvthanhpho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thành Phố"
        android:textSize="20dp"
        android:padding="5dp"
        android:background="@drawable/gray_boder"
        android:layout_margin="15dp"
        android:layout_below="@id/tvsdt"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="92dp" />
